<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- navbar %>
    <div class="container mx-auto mt-4">
      <h2 class="text-2xl font-bold mb-4 text-center">Featured Products</h2>
      <h3 class="text-2xl font-bold mb-4">Normal Products</h3>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
      >
        <% products.map(product => { %>
        <a href="/product/<%= product.id %>">
          <div class="bg-white rounded-lg shadow-lg p-4 m-3">
            <img
              src="<%= product.photos[0] %>"
              alt="<%= product.name %>"
              class="w-full h-64 object-contain mb-4"
            />
            <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
            <p class="text-gray-600 mb-2">Rs.<%= product.price %></p>
          </div>
        </a>
        <% }); %>
      </div>
      <a href="/product">
        <button
          type="button"
          class="block mx-auto mt-8 bg-green-600 hover:bg-green-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >
          View All Normal Products
        </button>
      </a>
      <h3 class="text-2xl font-bold mb-4">Auction Products</h3>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
      >
        <% auctionProducts.map(product => { %>
        <a href="/product/auction/<%= product.id %>">
          <div class="bg-white rounded-lg shadow-lg p-4 m-3">
            <img
              src="<%= product.photos[0] %>"
              alt="<%= product.name %>"
              class="w-full h-64 object-contain mb-4"
            />
            <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
            <p class="text-gray-600 mb-2">Rs.<%= product.price %></p>
          </div>
        </a>
        <% }); %>
      </div>
      <a href="/product/auction">
        <button
          type="button"
          class="block mx-auto mt-8 mb-8 bg-green-600 hover:bg-green-900 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
        >
          View All Auction Products
        </button>
      </a>
    </div>
  </body>
</html>
