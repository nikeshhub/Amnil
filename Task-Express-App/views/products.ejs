<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- navbar %>
    <div class="container mx-auto mt-4">
      <h2 class="text-2xl font-bold mb-4 text-center">All Products</h2>

      <form action="/product/search" method="GET">
        <div class="flex justify-center">
          <div class="flex-grow">
            <input
              type="text"
              id="search"
              name="name"
              placeholder="Search products..."
              class="border border-gray-300 px-4 py-2 rounded-md w-full"
            />
          </div>

          <div>
            <button
              type="submit"
              class="px-4 py-2 bg-blue-500 text-white rounded-md"
            >
              <i class="fas fa-search"></i>
            </button>
          </div>

          <div class="ml-8">
            <div class="mb-2">
              <label for="sort" class="mr-2">Sort by:</label>
              <select
                id="sort"
                name="sortBy"
                class="border border-gray-300 px-1 py-1 rounded-md"
              >
                <option value="name">Name</option>
                <option value="price">Price</option>
              </select>
            </div>
            <div>
              <label for="filter" class="mr-2">Filter By</label>
              <select
                id="filter"
                name="filterBy"
                class="border border-gray-300 px-2 py-1 rounded-md"
              >
                <option value="clothing">Clothing</option>
                <option value="accessories">Accessories</option>
                <option value="electronics">Electronics</option>
              </select>
            </div>
          </div>
        </div>
      </form>

      <% if (products.length > 0) { %>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
      >
        <% products.map(product => { %>
        <a href="/product/<%= product.id %>">
          <div class="bg-white rounded-lg shadow-lg p-4 m-3">
            <img
              src="http://localhost:8000/<%= product.photos %>"
              alt="<%= product.name %>"
              class="w-full h-64 object-contain mb-4"
            />
            <h3 class="text-lg font-semibold mb-2"><%= product.name %></h3>
            <p class="text-gray-600 mb-2">Rs.<%= product.price %></p>
          </div>
        </a>
        <% }); %>
      </div>
      <% } else { %>
      <p class="text-center text-gray-500"><%= message %></p>
      <% } %>
    </div>
  </body>
</html>
